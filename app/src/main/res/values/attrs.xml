<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CommonTabLayout">

        <!-- indicator -->
        <attr name="indicator_color" format="color"/>
        <attr name="indicator_height" format="dimension"/>
        <attr name="indicator_width" format="dimension"/>
        <!-- 设置指示器margin,当indicator_width大于0,无效 -->
        <attr name="indicator_margin_left" format="dimension"/>
        <attr name="indicator_margin_top" format="dimension"/>
        <attr name="indicator_margin_right" format="dimension"/>
        <attr name="indicator_margin_bottom" format="dimension"/>
        <attr name="indicator_corner_radius" format="dimension"/>
        <!-- 设置指示器上方还是下方,只对圆角矩形有用-->
        <attr name="indicator_gravity" format="enum">
            <enum name="TOP" value="48"/>
            <enum name="BOTTOM" value="80"/>
        </attr>
        <!-- 设置指示器为常规|三角形|背景色块|-->
        <attr name="indicator_style" format="enum">
            <enum name="NORMAL" value="0"/>
            <enum name="TRIANGLE" value="1"/>
            <enum name="BLOCK" value="2"/>
        </attr>
        <!-- 设置指示器长度与title一样长,只有在STYLE_NORMAL并且indicatorWidth小于零有效-->
        <attr name="indicator_width_equal_title" format="boolean"/>
        <!-- 设置指示器支持动画-->
        <attr name="indicator_anim_enable" format="boolean"/>
        <!-- 设置指示器动画时间-->
        <attr name="indicator_anim_duration" format="integer"/>
        <!-- 设置指示器支持动画回弹效果-->
        <attr name="indicator_bounce_enable" format="boolean"/>

        <!-- underline -->
        <attr name="underline_color" format="color"/>
        <attr name="underline_height" format="dimension"/>
        <attr name="underline_gravity" formatd="enum">
            <enum name="TOP" value="48"/>
            <enum name="BOTTOM" value="80"/>
        </attr>

        <!-- divider -->
        <attr name="divider_color" format="color"/>
        <attr name="divider_width" format="dimension"/>
        <attr name="divider_padding" format="dimension"/>

        <!-- tab -->
        <attr name="tab_padding" format="dimension"/>
        <!-- 设置tab大小等分 -->
        <attr name="tab_space_equal" format="boolean"/>
        <attr name="tab_width" format="dimension"/>

        <!-- title -->
        <attr name="text_size" format="dimension"/>
        <!-- 设置字体选中颜色 -->
        <attr name="text_select_color" format="color"/>
        <!-- 设置字体未选中颜色 -->
        <attr name="text_unselect_color" format="color"/>
        <!-- 设置字体加粗 -->
        <attr name="text_bold" format="enum">
            <enum name="NONE" value="0"/>
            <enum name="SELECT" value="1"/>
            <enum name="BOTH" value="2"/>
        </attr>
        <!-- 设置字体全大写 -->
        <attr name="text_all_caps" format="boolean"/>
    </declare-styleable>

</resources>
